        </div>
    </div>
</nav>
<div>
    #foreach($recipe in $recipes)
        <div class="col">
            <a class="recipe" href="/recipesAll/$recipe.id">
                <div>
                    <img src="$recipe.mediumCover" alt="$recipe.author">
                </div>
                $msg.get($recipe.name, $recipe.author)
            </a>
        </div>
    #end
</div>
